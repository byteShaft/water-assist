<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:focusable="true"
    android:focusableInTouchMode="true" >



    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Select Assistance"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tv"
        android:layout_alignStart="@+id/tv"
        android:layout_marginTop="49dp" />

    <RadioGroup
        android:id="@+id/radio_group_water_assist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp">

        <RadioButton
            android:id="@+id/leaking_pipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repair to leaking Supply Pipe" />
        <RadioButton
            android:id="@+id/renewwal_pipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Renewal of Supply Pipe"/>
        <RadioButton
            android:id="@+id/new_installation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Installation" />

    </RadioGroup>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_below="@+id/radio_group_water_assist"
        android:text="Provide details" />

    <EditText
        android:id="@+id/water_assist_et"
        android:hint="Details goes here..."
        android:inputType="textMultiLine"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/tv"
        android:lines="4"
        android:minLines="4"
        android:gravity="top|left"
        android:maxLines="10"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:padding="15dp"
        android:gravity="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="Submit" />

</RelativeLayout>